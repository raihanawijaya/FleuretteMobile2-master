<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGreen"
            android:orientation="vertical"
            android:padding="3dp">


            <LinearLayout
                android:layout_width="376dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_nik_code"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="1234" />

                <TextView
                    android:id="@+id/tv_nik_name"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="SALSABILA DARMAWIJAYA" />

                <TextView
                    android:id="@+id/tv_hari_kerja"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="26" />

                <TextView
                    android:id="@+id/tv_jam_lembur"
                    android:layout_width="29dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="20" />

                <TextView
                    android:id="@+id/tv_hari_besar"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_lain_lain_label"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_4sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="Lain Lain" />

                <TextView
                    android:id="@+id/tv_resi_pos_label"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="Resi Pos" />

                <TextView
                    android:id="@+id/tv_admin_label"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="Admin" />

                <TextView
                    android:id="@+id/tv_atk_label"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="Atk" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="376dp"
                android:layout_height="29dp"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_lain_lain"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_4sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="10.000" />

                <TextView
                    android:id="@+id/tv_resi_pos"
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="50.000" />

                <TextView
                    android:id="@+id/tv_admin"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"

                    android:background="@color/colorWhite"
                    android:gravity="center"

                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="25.000" />

                <TextView
                    android:id="@+id/tv_atk"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:gravity="center"

                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="26.000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_pot_so_label"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_4sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="Pot SO" />

                <TextView
                    android:id="@+id/tv_pot_seragam_label"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="Pot Seragam" />

                <TextView
                    android:id="@+id/tv_pot_cash_bon_label"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="Pot cash Bon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="376dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_pot_so"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_4sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="100.000" />

                <TextView
                    android:id="@+id/tv_pot_seragam"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/colorWhite"

                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="150.000" />

                <TextView
                    android:id="@+id/tv_pot_cash_bon"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:gravity="center"

                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="125.000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tj_kom_label"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_4sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:visibility="visible"
                    tools:text="Tj Kom" />

                <TextView
                    android:id="@+id/tv_tj_transport_label"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="Tj Transport" />

                <TextView
                    android:id="@+id/tv_tj_makan_label"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="Tj Makan" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="376dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_tj_kom"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_4sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="100.000" />

                <TextView
                    android:id="@+id/tv_tj_transport"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="150.000" />

                <TextView
                    android:id="@+id/tv_tj_makan"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:gravity="center"

                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    tools:text="125.000" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>