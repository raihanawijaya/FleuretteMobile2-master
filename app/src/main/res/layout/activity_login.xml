<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:layout_gravity="center"
    android:padding="0dp"
    android:background="@color/colorBlack"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@color/colorBlack"
        android:gravity="center"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:gravity="center"
        android:text="Fleurette Mobile"
        android:textColor="@color/colorFragment"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/et_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:gravity="center"
        android:padding="5dp"
        android:text="27.01.19"
        android:textColor="@color/colorFragment"
        android:textSize="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:padding="5dp"
        android:paddingBottom="20dp"
        android:background="@color/colorBlack"
        android:text="PT. Florindo Jaya"
        android:textColor="@color/colorFragment"
        android:textSize="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorBlack"
        android:gravity="center"
        android:padding="0dp"
        android:paddingBottom="20dp"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@color/colorBlack"
        android:paddingBottom="@dimen/_5sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="NIK Code       :"
            android:textColor="@color/colorFragment"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_nik_code"
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorSapta"
            android:gravity="center"
            android:inputType="text"
            android:textColor="@color/colorFragment"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="246dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@color/colorBlack"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="5dp">


        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Password      :"
            android:textColor="@color/colorFragment"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorSapta"
            android:gravity="center"
            android:inputType="text"
            android:textColor="@color/colorFragment"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="246dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@color/colorBlack"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Store Code    :"
            android:textColor="@color/colorFragment"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_store_code"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorSapta"
            android:gravity="center"
            android:inputType="text"
            android:textColor="@color/colorFragment"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:layout_width="245dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:background="@color/colorBlack"
        android:paddingBottom="80dp" />


    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorFragment"
        android:inputType="text"
        android:text="L O G I N"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="249dp"
        android:layout_height="209dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        app:srcCompat="@drawable/msd"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="130dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/colorBlack"
        android:gravity="center"
        android:padding="5dp"

        android:text="Powered by MSD Solution 2019"
        android:textColor="@color/colorFragment"
        android:textSize="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/colorBlack"
        android:gravity="center"
        android:padding="5dp"
        android:paddingBottom="24dp"
        android:text="msaptadw@yahoo.com"
        android:textColor="@color/colorFragment"
        android:textSize="12dp" />
</LinearLayout>